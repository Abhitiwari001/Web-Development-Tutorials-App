<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HTML"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/html_definition"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HTML Versions"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:stretchColumns="*"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:text="Version"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:padding="4dp"/>

                    <TextView
                        android:text="Year"
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="HTML"/>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="1991"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="HTML 2.0"/>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="1995"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="HTML 3.2"/>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="1997"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="HTML 4.01"/>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="1999"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="XHTML"/>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="2000"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="HTML 5"/>

                    <TextView
                        android:padding="4dp"
                        android:textColor="@android:color/black"
                        android:text="2012"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Getting Started"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/html_getting_started"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <Button
                android:text="Try Now"
                android:id="@+id/try_now_button"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>